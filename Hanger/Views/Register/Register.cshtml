@model Hanger.Models.User
@Styles.Render("~/css/account.css")
@{
    ViewBag.Title = "Register";
}

@*<link href="@Url.Content("~/css/accont.css")" rel="stylesheet">*@


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
   
        @Html.ValidationSummary(true)
        
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">

    <div id="login-overlay" class="modal-dialog">
        <div>
           
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-12 col-md-6">
                        <div class="well">
                            <form id="loginForm" method="POST" action="/login/" novalidate="novalidate">
                                <div class="form-group">
                                    <label for="Profil_name" class="control-label">Nazwa profilu</label>
                                    @Html.EditorFor(model => model.Profil_name)
                                    @Html.ValidationMessageFor(model => model.Profil_name)
                                </div>
                                <div class="form-group">
                                    <label for="Mail" class="control-label">E-mail</label>
                                    @Html.EditorFor(model => model.Mail)
                                    @Html.ValidationMessageFor(model => model.Mail)
                                </div>
                                <div class="form-group">
                                    <label for="Password" class="control-label">Hasło</label>
                                    @Html.EditorFor(model => model.Password)
                                    @Html.ValidationMessageFor(model => model.Password)
                                </div>
                                <div class="form-group">
                                    <label for="Confirm_assword" class="control-label">Powtórz hasło</label>
                                    @Html.EditorFor(model => model.ConfirmPassword)
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                                </div>
                                <input type="submit" value="Zarejestruj się" class="btn btn-default" />
                            </form>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6">
                        <p class="lead">Zarejestruj się <span class="text-success">ZA DARMO</span></p>
                        <ul class="list-unstyled" style="line-height: 2">
                            <li><span class="fa fa-check text-success"></span> Dodawaj nieskończoną ilość ogłoszeń </li>
                            <li><span class="fa fa-check text-success"></span> Wymieniaj się z innymi ubraniami</li>
                            <li><span class="fa fa-check text-success"></span> Inspiruj innych swoim stylem</li>
                        </ul>
                        <p class="lead-center"><span class="text-success">Masz już konto?</span></p>
                        <p><a href="/Login/Login" class="btn btn-info btn-block">Zaloguj się!</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>




    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/account.js"></script>
}
