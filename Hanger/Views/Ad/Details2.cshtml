@model IEnumerable<Hanger.Models.Ad>

@{
    ViewBag.Title = "Details";
}
@Styles.Render("~/css/card.css")
<h2>Details</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date_start)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Swap)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Condition.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Profil_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subcategory.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brand.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Swap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Condition.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Profil_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subcategory.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@for (int i = 0; i < Model.Count() - 1; i += 3)
{

    <div class="row top30">
        Natalia
        @for (int j = 0; j < 3; j++)
        {

            <div class="col-md-4">
                Natalia
                @Html.DisplayFor(p => p.ElementAt(i).Brand.Name)
                Natalia
            </div>

        }
    </div>
}

@foreach (var item in Model)
{
    <div class="row top30">
        Adamus
    </div>
}

<div id="wrapper">
    <div id="columns">
        @foreach (var item in Model)
        {   
             <div class="pin">
            <img src="~/Pictures/hmprod.jpg" />
                 <p class="alignleft">
                   
                     <b>@Html.DisplayFor(modelItem => item.Brand.Name)</b>
                 </p>
                 <p class="alignright">
                   
                     <b> @Html.DisplayFor(modelItem => item.Price) zł</b>
                 </p> 
                 <p class="right">
                   
                     <b>@Html.DisplayFor(modelItem => item.Size.Name)</b>
                 </p>
              </div>

        }
    </div>
</div>

    
